<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="@string/heigthformula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/distanceformula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/speedEditText"
        android:hint="Скорость"
        android:text="Укажите скорость"
        android:textCursorDrawable="@drawable/text_cursor_cyan"
        android:textSize="34sp"
        android:textColor="?android:textColorTertiary"
        app:met_baseColor="?android:colorAccent"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="60"
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/angleEditText"
        android:hint="Угол"
        android:text="Укажите скорость"
        android:textCursorDrawable="@drawable/text_cursor_cyan"
        android:textSize="34sp"
        android:textColor="?android:textColorTertiary"
        app:met_baseColor="?android:colorAccent"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="60"
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Расчет в градусах"
        android:id="@+id/angleCheckBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Расчет в радианах"
        android:id="@+id/radCheckBox" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Расчитать"
        android:layout_gravity="center"
        android:id="@+id/calcButton" />

    <!--<ToggleButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="New ToggleButton"-->
        <!--android:id="@+id/toggleButton" />-->
</LinearLayout>
